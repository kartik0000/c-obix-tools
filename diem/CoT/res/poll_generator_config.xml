<config>

	<!-- Connection settings -->
	<connection id="0" type="http">
		<server-address val="http://localhost" lobby="/obix/" />
		<!--
			poll-interval val="1000" /> <long-poll> <min-interval val="200"/>
			<max-interval val="60000"/> </long-poll
		-->
		<max-devices val="1" />
		<max-listeners val="1" />
	</connection>

	<!-- Driver specific settings -->
	<device-info>
		<obj name="ExampleTimer" displayName="Example Timer">
			<obj displayName="Dummy data" href="dummy/">
				<str displayName="String 1" href="str1" val="Hello! I am dummy string 1"
					writable="true" />
				<str displayName="String 2" href="str2" val="Hello! I am dummy string 2"
					writable="true" />
				<str displayName="String 3" href="str3" val="Hello! I am dummy string 3"
					writable="true" />
				<str displayName="String 4" href="str4" val="Hello! I am dummy string 4"
					writable="true" />
				<str displayName="String 5" href="str5/" val="Hello! I am dummy string 5"
					writable="true">
					<int displayName="Integer 1" href="int1" val="1" writable="true" />
					<int displayName="Integer 2" href="int2" val="2" writable="true" />
					<int displayName="Integer 3" href="int3" val="3" writable="true" />
					<int displayName="Integer 4" href="int4" val="4" writable="true" />
					<int displayName="Integer 5" href="int5" val="5" writable="true" />	
					<int displayName="Integer 6" href="int6" val="6" writable="true" />
					<int displayName="Integer 7" href="int7" val="7" writable="true" />
					<int displayName="Integer 8" href="int8" val="8" writable="true" />
					<int displayName="Integer 9" href="int9" val="9" writable="true" />
					<int displayName="Integer 0" href="int0" val="0" writable="true" />
				</str>
			</obj>
		</obj>
	</device-info>

	<!-- Log settings -->
	<log>
		<level val="warning" />
		<!-- <use-syslog facility="user" /> -->
	</log>

</config>